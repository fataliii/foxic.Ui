
@model IEnumerable<Foxic.Core.Entities.Collection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" style="margin:50px 350px">Create New</a>
</p>
<table class="table" style="margin-left:300px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionName)
            </td>
            <td>
                <img style="width:100px" src="~/@item.Image"/>

            </td>
                <td>
                    <a asp-action="Details" asp-route-id=@item.Id class="btn btn-primary">
                        <i class="bx bx-comment-detail"></i>
                    </a>
                    <a asp-action="Update" asp-route-id=@item.Id class="btn btn-warning">
                        <i class="bx bxs-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger">
                        <i class="bx bx-trash"></i>
                    </a>
                </td>
            
